# Maintainer Andrew Gregory <andrew.gregory.8@gmail.com>

pkgname=openrc-arch-services-git
pkgdesc="Arch Linux service scripts for openrc"
pkgver=20121121
pkgrel=1
url="https://github.com/andrewgregory/openrc-arch-services"
license=('GPL2')
arch=('any')
backup=() #fill in below

_gitroot="$url.git"
_gitname='openrc-arch-services'

build() {
    cd "$srcdir"

    msg "Connecting to GIT server...."

    if [ -d "$_gitname" ] ; then
        cd "$_gitname"
        git pull origin
        msg "The local files are updated."
    else
        git clone "$_gitroot"
        cd "$_gitname"
    fi

    msg "GIT checkout done or server timeout"
}

package() {
    cd "$srcdir/$_gitname"
    make \
        SYSCONFDIR='etc/openrc' \
        DESTDIR="$pkgdir" \
        install

    # add conf.d files to backup
    cd "$pkgdir"
    for conf in etc/openrc/conf.d/*; do
        backup+=($conf)
    done
}
